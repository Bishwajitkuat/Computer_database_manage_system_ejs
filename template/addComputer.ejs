        <label for="name">Name</label>
        <input type="text" name="name" id="name" />
      </div>
      <div>
        <label for="type">type</label>
        <input type="text" name="type" id="type" />
      </div>
      <div>
        <label for="processor"></label>
        <input type="text" name="processor" id="processor" />
      </div>
      <div>
